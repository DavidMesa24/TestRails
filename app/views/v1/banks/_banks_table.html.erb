<table class="table-auto w-full border border-gray-200">
  <thead class="bg-blue-100">
  <tr>
    <th class="border-b px-4 py-2">Name</th>
    <th class="border-b px-4 py-2">Edit</th>
    <th class="border-b px-4 py-2">Delete</th>
  </tr>
  </thead>
  <tbody>
  <% @banks.each do |bank| %>
    <tr>
      <td class="border-b px-4 py-2">
        <%= link_to bank.name, v1_bank_path(bank), class: 'text-blue-500 hover:underline' %>
      </td>

      <td class="border-b px-3 py-2">
        <div class="flex justify-center">
          <%= render partial: 'shared/edit_link_table', locals: { resource: bank, edit_icon: '/pencil.png' } %>
        </div>

      </td>

      <td class="border-b px-3 py-2">
        <div class="flex justify-center">
          <%= render partial: 'shared/delete_link_table', locals: { resource: bank, delete_icon: '/trash.png' } %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>





