<div class="overflow-x-auto">
  <table class="table-auto w-full bg-white border border-gray-300">
    <thead class="bg-blue-100">
    <tr>
      <th class="py-2 px-4 border-b">Name</th>
      <th class="py-2 px-4 border-b">Contact Name</th>
      <th class="py-2 px-4 border-b">Contact Phone</th>
      <th class="py-2 px-4 border-b">Bank Name</th>
      <th class="py-2 px-4 border-b">Bank Account</th>
      <th class="py-2 px-4 border-b">Edit</th>
      <th class="py-2 px-4 border-b">Delete</th>
    </tr>
    </thead>
    <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td class="py-2 px-4 border-b">
          <%= link_to provider.name, v1_provider_path(provider), class: "text-blue-500 hover:underline" %>
        </td>
        <td class="py-2 px-4 border-b"><%= provider.contact_name %></td>
        <td class="py-2 px-4 border-b"><%= provider.attribute_validator(provider.contact_phone) %></td>
        <td class="py-2 px-4 border-b"><%= provider.bank_account.bank.name %></td>
        <td class="py-2 px-4 border-b"><%= provider.bank_account.account_number %></td>
        <td class="border-b px-4 py-2">
          <div style="display: flex; justify-content: center">
            <%= render partial: 'shared/edit_link_table', locals: { resource: provider, edit_icon: '/pencil.png' } %>
          </div>
        </td>

        <td class="border-b px-4 py-2">
          <div style="display: flex; justify-content: center">
            <%= render partial: 'shared/delete_link_table', locals: { resource: provider, delete_icon: '/trash.png' } %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
